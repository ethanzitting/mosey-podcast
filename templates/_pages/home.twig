{% extends '_base.twig' %}

{% block main %}

    {% set jumbotron = entry.jumbotron %}
    {% include '_modules/jumbotron.twig' with {
        text: jumbotron,
    } %}

    {% set latestContent = entry.latestContent %}
    {% if latestContent %}
        {% if latestContent.thumbnail %}
            {% set thumbnail = latestContent.thumbnail.one() %}
        {% endif %}
        {% include '_modules/latest-content.twig' with {
            audio: latestContent.audio,
            thumbnail: thumbnail,
            description: latestContent.description,
        } %}
    {% endif %}

    {% set textBlock = entry.textBlock %}
    {% include '_modules/text-block.twig' with {
        text: textBlock,
    } %}

    {% set smallEpisodeList = entry.smallEpisodeList.all() %}
    {% include '_modules/small-episode-list.twig' with {
        episodeList: smallEpisodeList
    } %}

    {% set callToAction = entry.callToAction %}
    {% include '_modules/call-to-action.twig' with {
        text: callToAction,
    } %}

{% endblock %}